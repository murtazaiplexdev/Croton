{% if settings.error_page_style == "style1" %}
<div class="theme-default-margin">
  <div class="container">	
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="error-content text-center">
          {% if settings.opps_404 %}
          <img src="{{ settings.opps_404 | img_url: '1024x1024' }}" alt="" />
          {% endif %}
          {% if settings.heading_404 !='' %}
          <h4>{{ settings.heading_404 }}</h4>
          {% endif %}
          {% if settings.sub_text_404 !='' %}
          <p>{{ settings.sub_text_404 }}</p>
          {% endif %}
          {% if settings.button_title !='' %}
          <a class="theme-default-button" href="{{ settings.button_url }}" data-text="{{ settings.button_title }}" >{{ settings.button_title }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% elsif settings.error_page_style == "style2" %}
<div class="nothing-found-area bg-404" style="background-image: url('{% if settings.opps_404 != blank %}{{ settings.opps_404 | img_url: "master"}} {% else %} https://via.placeholder.com/1920x1000 {% endif %}');">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="nothing-found-content">
           {% if settings.heading_404 !='' %}
          <h1>{{ settings.heading_404 }}</h1>
          {% endif %}
          {% if settings.sub_text_404 !='' %}
          <h1 class="mb-50">{{ settings.sub_text_404 }}</h1>
          {% endif %}
          
          <p class="direction-page">{{ settings.return_page_title }} <a href="{{ settings.button_url }}">{{ settings.button_title }}</a> </p>
          
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
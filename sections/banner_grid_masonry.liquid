<div class="homepage-content--creative mb-20" id="section-{{ section.id }}" data-section="BannerSection">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% endif %}">
    <div class="row masonry-category-layout--creativehome">
      {% for block in section.blocks %}
      {%- capture bannerimg -%}
      {%- if block.settings.banner_img != blank -%} {{ block.settings.banner_img | img_url: 'master' }}{% else %} https://via.placeholder.com/845x400 {%- endif -%}
      {%- endcapture -%}
      {%- case block.type -%}
      {% when 'banner_grid_6' %}
      <div class="col-lg-6 grid-item">
        <div class="single-category single-category--three">
          
          <div class="single-category__image single-category__image--three single-category__image--three--creativehome">
            <img src="{{ bannerimg }}" data-src="{{ bannerimg }}" {% if block.settings.banner_img != blank %} data-srcset="{%- include 'layload_datasrc', datascrc: block.settings.banner_img, dataimgsize: 'master' -%}" {% endif %} class="lazyload img-fluid" alt="{{ block.settings.banner_img.alt }}">
          </div>

          <div class="single-category__content single-category__content--three single-category__content--three--creativehome mt-25 mb-25">
            <div class="title">
              {% if block.settings.banner_title != blank  %}
              <p><a href="{{ block.settings.banner_url }}">{{ block.settings.banner_title }}</a></p>
              {% endif %}
              
              {% if block.settings.banner_button_text != blank %}
              <a href="{{ block.settings.banner_url }}">{{ block.settings.banner_button_text }}</a>
              {% endif %}
            </div>

          </div>
          <!--=======  banner-link  =======-->

          <a href="{{ block.settings.banner_url }}" class="banner-link"></a>

          <!--=======  End of banner-link  =======-->
        </div>
        <!--=======  End of single category  =======-->
      </div>
      {% when 'banner_grid_3' %}
      <div class="col-lg-3 grid-item grid-item--width2">

        <div class="single-category single-category--three">
          <!--=======  single category image  =======-->

          <div class="single-category__image single-category__image--three single-category__image--three--creativehome">
            <img src="{% if block.settings.banner_img != blank %} {{ block.settings.banner_img | img_url: 'master' }}{% else %} https://via.placeholder.com/407x620 {% endif %}" src="{% if block.settings.banner_img != blank %} {{ block.settings.banner_img | img_url: 'master' }}{% else %} https://via.placeholder.com/407x620 {% endif %}" data-src="{% if block.settings.banner_img != blank %} {{ block.settings.banner_img | img_url: 'master' }}{% else %} https://via.placeholder.com/407x620 {% endif %}" src="{% if block.settings.banner_img != blank %} {{ block.settings.banner_img | img_url: 'master' }}{% else %} https://via.placeholder.com/407x620 {% endif %}" {% if block.settings.banner_img != blank %} data-srcset="{%- include 'layload_datasrc', datascrc: block.settings.banner_img, dataimgsize: 'master' -%}" {% endif %} class="lazyload img-fluid" alt="{{ block.settings.banner_img.alt }}">
          </div>

          <div class="single-category__content single-category__content--three single-category__content--three--creativehome mt-25 mb-25">
            <div class="title">
              {% if block.settings.banner_title != blank  %}
              <p><a href="{{ block.settings.banner_url }}">{{ block.settings.banner_title }}</a></p>
              {% endif %}
              
              {% if block.settings.banner_button_text != blank %}
              <a href="{{ block.settings.banner_url }}">{{ block.settings.banner_button_text }}</a>
              {% endif %}
            </div>
          </div>
          <a href="{{ block.settings.banner_url }}" class="banner-link"></a>

        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>


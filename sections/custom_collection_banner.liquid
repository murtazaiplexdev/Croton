
<div class="product-category-container mb-100 mb-md-80 mb-sm-80" id="section-{{ section.id }}" data-section="BannerSection">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% endif %}">
    <div class="row-5 masonry-category-layout">
		
      {% for block in section.blocks %}
      
      {%- capture bannerimg -%}
      {%- if block.settings.custom_collection_img != blank -%}{{ block.settings.custom_collection_img | img_url: 'master' }} {%- else -%} https://via.placeholder.com/580x580{%- endif -%}
      {%- endcapture -%}
      
      
      {%- case block.type -%}
      {% when 'collection_grid_6' %}
      <div class="col-lg-6 grid-item wow zoomIn">
        <!--=======  single category  =======-->

        <div class="single-category single-category--three">
          <!--=======  single category image  =======-->

          <div class="single-category__image single-category__image--three">
            <a href="{{ block.settings.collection_link }}"><img src="{{ bannerimg }}" data-src="{{ bannerimg }}"  {% if block.settings.custom_collection_img != blank %} data-srcset="{% include 'layload_datasrc', datascrc: block.settings.custom_collection_img, imagesize: 'master' %}" {% endif %} class="lazyload img-fluid" alt=""></a>
          </div>

          <!--=======  single category content  =======-->

          <div class="single-category__content single-category__content--three mt-25 mb-25">
            <div class="title">
              
              {% if  block.settings.collection_name != blank %}
              <p>{{ block.settings.collection_name }}</p>
              {% endif %}
              {% if block.settings.collection_hover_title != blank %}
                <a href="{{ block.settings.collection_link }}">{{ block.settings.collection_hover_title | default: "+ Store"  }}</a>
              {% endif %}
            </div>

          </div>


          <!--=======  End of banner-link  =======-->
        </div>

        <!--=======  End of single category  =======-->
      </div>
      
      {% when 'collection_grid_small_6' %}
      <div class="col-lg-6 grid-item wow zoomIn">
        <!--=======  single category  =======-->

        <div class="single-category single-category--three">
          <!--=======  single category image  =======-->

          <div class="single-category__image single-category__image--three">
            <a href="{{ block.settings.collection_link }}">
              <img src="{% if block.settings.custom_collection_img != blank %}{{ block.settings.custom_collection_img | img_url: 'master' }} {% else %} https://via.placeholder.com/580x285{% endif %}" data-src="{% if block.settings.custom_collection_img != blank %}{{ block.settings.custom_collection_img | img_url: 'master' }} {% else %} https://via.placeholder.com/580x285{% endif %}" {% if block.settings.banner_img != blank %} data-srcset="{% include 'layload_datasrc', datascrc: block.settings.custom_collection_img, imagesize: 'master' %}" {% endif %} class="lazyload img-fluid" alt="">
            </a>
          </div>

          <!--=======  single category content  =======-->

          <div class="single-category__content single-category__content--three mt-25 mb-25">
            <div class="title">
              
              {% if  block.settings.collection_name != blank %}
              <p>{{ block.settings.collection_name }}</p>
              {% endif %}
              {% if block.settings.collection_hover_title != blank %}
                <a href="{{ block.settings.collection_link }}">{{ block.settings.collection_hover_title | default: "+ Store"  }}</a>
              {% endif %}
            </div>

          </div>


          <!--=======  End of banner-link  =======-->
        </div>

        <!--=======  End of single category  =======-->
      </div>
      {% when 'collection_grid_3' %}
      <div class="col-lg-3 col-md-6 grid-item grid-item--width2 wow zoomIn">

        <!--=======  single category  =======-->

        <div class="single-category single-category--three">
          <!--=======  single category image  =======-->

          <div class="single-category__image single-category__image--three">
            
            <a href="{{ block.settings.collection_link }}">
              <img src="{% if block.settings.custom_collection_img != blank %}{{ block.settings.custom_collection_img | img_url: 'master' }} {% else %} https://via.placeholder.com/275x275{% endif %}" data-src="{% if block.settings.custom_collection_img != blank %}{{ block.settings.custom_collection_img | img_url: 'master' }} {% else %} https://via.placeholder.com/275x275{% endif %}" {% if block.settings.banner_img != blank %} data-srcset="{% include 'layload_datasrc', datascrc: block.settings.custom_collection_img, imagesize: 'master' %}" {% endif %} class="lazyload img-fluid" alt="">
            </a>
          </div>

          <div class="single-category__content single-category__content--three mt-25 mb-25">
            <div class="title">
              {% if  block.settings.collection_name != blank %}
              <p>{{ block.settings.collection_name }}</p>
              {% endif %}
               {% if block.settings.collection_hover_title != blank %}
                <a href="{{ block.settings.collection_link }}">{{ block.settings.collection_hover_title | default: "+ Store"  }}</a>
              {% endif %}
            </div>
          </div>
          
        </div>

        <!--=======  End of single category  =======-->
      </div>
      {% endcase %}
      {% endfor %}
      
    </div>
  </div>
</div>

{% include 'section_typography' %}
<style>
  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when "section_color_option" -%}
  #section-{{ section.id }} .single-category__content--three .title p {
    color: {{ block.settings.title_color }};
  }
  #section-{{ section.id }} .single-category__content .title a {
    color: {{ block.settings.title_hover_color }};
  }
  {%- endcase -%}
  {%- endfor -%}

</style>


<div class="home-content--concept mb-65 mb-md-50 mb-sm-30" id="section-{{ section.id }}" data-section="BannerSection">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% endif %}">
    <div class="row">
      
      {% if section.settings.collection_banner_left %} 
      <div class="{% if section.settings.collection_banner_right %} col-lg-6 {% else %} col-12 {% endif %}">
        <div class="row">
          {%- if section.settings.banner_collection_header -%}
          <div class="col-lg-8 offset-lg-4">
            <!--=======  section title  =======-->

            <div class="section-title section-title--one section-title--concepthome mb-150 mb-md-50 mb-sm-50 mb-xs-50 mb-xxs-50">
              {% if section.settings.collection_section_subtitle != blank %}
              <p class="section-label mb-25">{{ section.settings.collection_section_subtitle }}</p>
              {% endif %}
              
              {% if section.settings.collection_section_title != blank %}
              <h1>{{ section.settings.collection_section_title }}</h1>
              {% endif %}
              
              {% if section.settings.collection_section_description != blank %}
              <p>{{ section.settings.collection_section_description }}</p>
              {% endif %}

              {% if section.settings.collection_setion_btn_text != blank %}
              <a href="{{ section.settings.collection_setion_btn_link }}" class="lezada-button-2">{{ section.settings.collection_setion_btn_text }}</a>
              {% endif %}
            </div>
          </div>
          {%- endif -%}
          
          {% for block in section.blocks %}
          {% assign cat_collection = collections[block.settings.categegory_handle] %}
          {%- capture bannerImgSrc -%}
              {%- if block.settings.collection_img == 'default' -%}
              {%- if cat_collection.image.src != blank -%}{{ cat_collection.image.src | img_url: '745x745' }} {%- else -%} https://via.placeholder.com/745x745 {%- endif -%} 
              {%- elsif block.settings.collection_img == 'custom' -%}
              {%- if block.settings.custom_collection_img != blank -%}{{ block.settings.custom_collection_img | img_url: '745x745' }} {%- else -%} https://via.placeholder.com/745x745 {%- endif -%}
              {%- endif -%}
            {%- endcapture -%}
            
            {% capture bannerImgSrcSet %}
            {%- if block.settings.collection_img == 'default' -%}
            {%- if cat_collection.image.src != blank -%} data-srcset="{%- include 'layload_datasrc', datascrc: cat_collection.image.src, imagesize: '745x745' -%}" {%- endif -%} 
            {%- elsif block.settings.collection_img == 'custom' -%}
            {%- if block.settings.custom_collection_img != blank -%} data-srcset="{%- include 'layload_datasrc', datascrc: block.settings.custom_collection_img , imagesize: '745x745' -%}" {%- endif -%} 
            {%- endif -%}
            {% endcapture %}
          {%- case block.type -%}
          {%- when 'left_large_collection' -%}
          <div class="col-lg-10 col-md-10 col-sm-10">
            <!--=======  single category  =======-->

            <div class="single-category single-category--one  single-category--concept-home mb-150 mb-md-50 mb-sm-50 mb-xs-50 mb-xxs-50">
              <!--=======  single category image  =======-->

              <div class="single-category__image single-category__image--one">
                 <a href="{{ cat_collection.url }}">
                    <img src="{{ bannerImgSrc }}" data-src="{{ bannerImgSrc }}" {{ bannerImgSrcSet }} class="lazyload img-fluid" alt="{%- if block.settings.collection_img == 'default' -%}{{ cat_collection.image.src.alt  }}{%- else -%} {{ block.settings.custom_collection_img.alt }} {%- endif -%}">
                  </a>
              </div>

              <!--=======  End of single category image  =======-->

              <!--=======  single category content  =======-->

              <div class="single-category__content single-category__content--one mt-25 mb-25">
                <div class="title">
                  <p>{{ cat_collection.title  }}</p>
                   <a href="{{ cat_collection.url }}">{{ block.settings.collection_hover_title | default: '+ Online store' }}</a>
                </div>
                <p class="product-count">{{ cat_collection.all_products_count }}</p>
              </div>

              <!--=======  End of single category content  =======-->

              <!--=======  banner-link  =======-->

            

              <!--=======  End of banner-link  =======-->
            </div>

            <!--=======  End of single category  =======-->
          </div>
          {%- when 'left_medium_collection' -%}
          <div class="col-lg-8 offset-lg-4 col-md-8 offset-md-4 col-sm-8 offset-sm-4">
            <!--=======  single category  =======-->

            <div class="single-category single-category--one  single-category--concept-home mb-150 mb-md-50 mb-sm-50 mb-xs-50 mb-xxs-50">

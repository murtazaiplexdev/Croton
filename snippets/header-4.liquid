<header data-section="HeaderSection" class="header header-vertical d-none d-xl-block" id="section-{{ section.id }}">
  <!--=======  vertical header container  =======-->

  <div class="vertical-header-container">

    <!--=======  logo  =======-->

    <div class="vertical-header-logo">
      {% include 'header-logo' %}
    </div>

    <!--=======  End of logo  =======-->

    <!--=======  menu icon  =======-->

    <div class="menu-icon-container">
      <a href="javascript:void(0)" class="" id="vertical-menu-icon">
        <span class="menu-icon"></span>
        <span class="menu-icon"></span>
        <span class="menu-icon"></span>
      </a>
    </div>

    <!--=======  End of menu icon  =======-->

    <!--=======  headeer bottom container  =======-->

    <div class="header-bottom-container">


      <!--=======  header right icons  =======-->

      <div class="header-right-icons vertical-dark-menu-bottom">

        <!--=======  copyright text  =======-->

        {% if section.settings.copyright_text != blank %}	
        <p class="copyright-text">{{ section.settings.copyright_text }}</p>
        {% endif %}	

        <!--=======  End of copyright text  =======-->

        <!--=======  single-icon  =======-->


        <div class="single-icon search">
          <a href="javascript:void(0)" id="search-icon">
            <i class="ion-ios-search-strong"></i>
          </a>
        </div>

        <!--=======  End of single-icon  =======-->

        <!--=======  single-icon  =======-->

        <div class="single-icon wishlist">
          <a href="/pages/wishlist" id="offcanvas-wishlist-icon">
            <i class="ion-android-favorite-outline"></i>
          </a>
        </div>

        <!--=======  End of single-icon  =======-->
        <!--=======  single-icon  =======-->


        <div class="single-icon cart">
          {%- assign item_count = cart.item_count -%}
          <a href="javascript:void(0)" id="offcanvas-cart-icon">
            <i class="ion-ios-cart"></i>
            <span class="count bigcounter">{{ item_count }}</span>
          </a>
        </div>
        <!--=======  End of single-icon  =======-->
      </div>
      <!--=======  End of header right icons  =======-->

    </div>

    <!--=======  End of headeer right container  =======-->


  </div>

  <!--=======  End of vertical header container  =======-->

</header>

<!--===== End of Header wide topbar ======-->

<!--=============================================
=            Header wide topbar         =

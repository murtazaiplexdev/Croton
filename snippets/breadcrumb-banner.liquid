<!-- BREADCRUMBS SETCTION START -->
{%- if settings.breadcrumb_banner_enable -%}
<div class="breadcrumb-area overlay-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 {% if settings.text_align == "left" %}text-left {% elsif settings.text_align == "right" %} text-right {% elsif settings.text_align == "center" %} text-center {% endif %}">
        {%- if settings.page_title_enable -%}
        <h1 class="breadcrumb-title">{{ page_title }}</h1>
        {%- endif -%}
        {%- if settings.breadcrumb_enable -%}
        {%- include 'breadcrumb-builtin' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endif -%}
<!-- BREADCRUMBS SETCTION END -->
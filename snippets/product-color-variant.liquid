<div class="color-container">
  <ul class="grid-color-swatch ">
    {% for option in product.options %}
    {% if option == 'Color' or option == 'Colour' %}
    {% assign index = forloop.index0 %}
    {% assign colorlist = '' %}
    {% assign color = '' %}
    {% for variant in product.variants limit: 50 %}
    {% capture color %}
    {{ variant.options[index] }}
    {% endcapture %}
    {% unless colorlist contains color %}
    {% assign text = color | handleize %}

    <li {% if variant.image != null %} class="img_variant" {% endif %}>
      {% unless variant.image != null %}
      <label data-tippy-content="{{ color }}" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" style="{% if text == 'white' %}border: 1px solid #f1f1f1; {% endif %}background-color: {{ color | split: ' ' | last | handle }};"></label>
      {% endunless %}

      {% if variant.image != null %}
      <div class="variant_img">
        <a data-tippy-content="{{ color }}" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme = "sharpborder" href="{{ variant.image.src | product_img_url: '600x800', crop: 'bottom' }}"><img class="lazyload" data-src="{{ variant.image.src | product_img_url: 'icon', crop: 'center' }}" alt=""></a>
      </div>
      {% endif %}
    </li>

    {% capture tempList %}
    {{ colorlist | append: color | append: ' ' }}
    {% endcapture %}

    {% assign colorlist = tempList %}
    {% endunless %}

    {% endfor %}
    {% endif %}
    {% endfor %}
  </ul>
</div>
